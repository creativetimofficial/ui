      "content": "\"use client\"\n\nimport { Quote, Star } from \"lucide-react\"\n\nimport {\n  Avatar,\n  AvatarFallback,\n  AvatarImage,\n} from \"@/registry/creative-tim-ui/ui/avatar\"\nimport { Card, CardContent } from \"@/registry/creative-tim-ui/ui/card\"\n\nexport default function TestimonialsBlock() {\n  return (\n    <section className=\"py-20\">\n      <div className=\"container mx-auto px-4\">\n        <Card className=\"overflow-hidden border-border/50 shadow-lg\">\n          <div className=\"grid grid-cols-1 items-center gap-8 md:grid-cols-12 md:gap-0\">\n            <div className=\"md:col-span-5\">\n              <img\n                src=\"https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=988\"\n                alt=\"Professional workspace\"\n                className=\"h-full w-full object-cover md:min-h-[500px]\"\n              />\n            </div>\n            <CardContent className=\"md:col-span-7 p-8 md:p-12 lg:p-16\">\n              <div className=\"mb-6 inline-flex items-center gap-2 rounded-full bg-primary/10 px-4 py-1.5\">\n                <Quote className=\"h-4 w-4 text-primary\" />\n                <span className=\"text-sm font-semibold uppercase tracking-wide text-primary\">\n                  Client Testimonial\n                </span>\n              </div>\n              \n              <h2 className=\"mb-6 text-3xl font-bold md:text-4xl\">\n                Trusted by Industry Leaders\n              </h2>\n              \n              <blockquote className=\"mb-8 text-lg leading-relaxed text-foreground/80\">\n                &quot;This component library has revolutionized our development workflow. \n                The quality, flexibility, and attention to detail in every component is \n                exceptional. It's become an essential part of our tech stack.&quot;\n              </blockquote>\n              \n              <div className=\"mb-8 flex items-center gap-1\">\n                {Array.from({ length: 5 }).map((_, i) => (\n                  <Star key={i} className=\"h-5 w-5 fill-yellow-400 text-yellow-400\" />\n                ))}\n              </div>\n              \n              <div className=\"flex items-center gap-4\">\n                <Avatar className=\"h-14 w-14 border-2 border-border\">\n                  <AvatarImage\n                    alt=\"Sarah Mitchell\"\n                    src=\"https://images.unsplash.com/photo-1580489944761-15a19d654956?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=100\"\n                  />\n                  <AvatarFallback>SM</AvatarFallback>\n                </Avatar>\n                <div>\n                  <p className=\"text-lg font-semibold\">Sarah Mitchell</p>\n                  <p className=\"text-sm text-muted-foreground\">\n                    VP of Engineering, TechCorp\n                  </p>\n                </div>\n              </div>\n            </CardContent>\n          </div>\n        </Card>\n      </div>\n    </section>\n  )\n}\n",
      "type": "registry:page",
      "target": "app/testimonials-06/page.tsx"
    }
  ],
