{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "ecommerce-sections-02",
  "type": "registry:block",
  "description": "Luxury product detail page with image gallery",
  "registryDependencies": [
    "badge",
    "button"
