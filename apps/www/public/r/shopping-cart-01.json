{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "shopping-cart-01",
  "type": "registry:block",
  "description": "Shopping cart with summary",
  "registryDependencies": [
    "button",
    "card",
    "input",
    "select",
    "badge",
    "separator"
  ],
  "files": [
    {
      "path": "registry/creative-tim-ui/blocks/shopping-cart-01/page.tsx",
      "content": "\"use client\"\n\nimport { Lock, X, ShoppingBag, Tag, Truck, Package } from \"lucide-react\"\n\nimport { Button } from \"@/registry/creative-tim-ui/ui/button\"\nimport { Badge } from \"@/registry/creative-tim-ui/ui/badge\"\nimport {\n  Card,\n  CardContent,\n  CardHeader,\n} from \"@/registry/creative-tim-ui/ui/card\"\nimport { Input } from \"@/registry/creative-tim-ui/ui/input\"\nimport { Separator } from \"@/registry/creative-tim-ui/ui/separator\"\nimport {\n  Select,\n  SelectContent,\n  SelectItem,\n  SelectTrigger,\n  SelectValue,\n} from \"@/registry/creative-tim-ui/ui/select\"\n\nconst CHECKOUT_PRODUCTS = [\n  {\n    name: \"Wool Suit\",\n    price: \"$1,300\",\n    product: \"Silk\",\n    size: \"XS\",\n    img: \"https://v3.material-tailwind.com/coat-2.png\",\n    stock: \"In Stock\",\n  },\n  {\n    name: \"Premium Suit\",\n    price: \"$700\",\n    product: \"Linen\",\n    size: \"M\",\n    img: \"https://v3.material-tailwind.com/coat-1.png\",\n    stock: \"In Stock\",\n  },\n]\n\nexport default function ShoppingCart01() {\n  return (\n    <section className=\"py-16\">\n      <div className=\"container mx-auto\">\n        <Card className=\"rounded-2xl shadow-lg\">\n          <CardContent className=\"p-8 md:p-12\">\n            <div className=\"mb-12 text-center\">\n              <div className=\"mb-4 flex items-center justify-center gap-2\">\n                <div className=\"flex h-12 w-12 items-center justify-center rounded-full bg-primary/10\">\n                  <ShoppingBag className=\"h-6 w-6 text-primary\" />\n                </div>\n              </div>\n              <h2 className=\"text-3xl font-bold\">Shopping Cart</h2>\n              <div className=\"mt-3 inline-flex items-center gap-2 rounded-full bg-green-50 px-4 py-2\">\n                <Truck className=\"h-4 w-4 text-green-600\" />\n                <p className=\"text-sm font-medium text-green-700\">\n                  You are eligible for Free Shipping\n                </p>\n              </div>\n            </div>\n\n            <div className=\"grid w-full grid-cols-1 gap-8 lg:grid-cols-3\">\n              <div className=\"col-span-2 flex w-full flex-col gap-6\">\n                <div className=\"mb-2 flex items-center gap-2\">\n                  <Package className=\"h-5 w-5 text-muted-foreground\" />\n                  <h3 className=\"text-lg font-semibold\">Cart Items ({CHECKOUT_PRODUCTS.length})</h3>\n                </div>\n\n                {CHECKOUT_PRODUCTS.map(\n                  ({ name, price, img, product, size, stock }, index) => (\n                    <Card\n                      key={index}\n                      className=\"border-2 transition-shadow hover:shadow-md\"\n                    >\n                      <CardContent className=\"p-4\">\n                        <div className=\"flex flex-col items-stretch gap-4 sm:flex-row\">\n                          <div className=\"h-32 w-32 shrink-0 overflow-hidden rounded-lg bg-muted\">\n                            <img\n                              src={img}\n                              alt={name}\n                              className=\"h-full w-full object-cover p-2\"\n                            />\n                          </div>\n                          <div className=\"flex h-auto flex-1 flex-col gap-3\">\n                            <div className=\"flex items-start justify-between gap-4\">\n                              <div>\n                                <h4 className=\"text-lg font-semibold\">{name}</h4>\n                                <p className=\"text-muted-foreground mt-1 text-sm\">\n                                  {product}\n                                </p>\n                              </div>\n                              <div className=\"flex items-center gap-3\">\n                                <p className=\"text-xl font-bold text-primary\">\n                                  {price}\n                                </p>\n                                <Button\n                                  size=\"icon\"\n                                  variant=\"ghost\"\n                                  className=\"h-8 w-8 rounded-full text-muted-foreground hover:bg-destructive/10 hover:text-destructive\"\n                                >\n                                  <X className=\"h-4 w-4\" />\n                                </Button>\n                              </div>\n                            </div>\n\n                            <div className=\"flex flex-wrap items-center gap-3\">\n                              <Badge variant=\"outline\" className=\"gap-1\">\n                                Size: {size}\n                              </Badge>\n                              <Badge variant=\"outline\" className=\"border-green-200 bg-green-50 text-green-700\">\n                                {stock}\n                              </Badge>\n                            </div>\n\n                            <div className=\"mt-auto flex items-center justify-between\">\n                              <div className=\"flex items-center gap-2\">\n                                <span className=\"text-muted-foreground text-sm\">Quantity:</span>\n                                <Select defaultValue=\"1\">\n                                  <SelectTrigger className=\"w-24\">\n                                    <SelectValue placeholder=\"Qty\" />\n                                  </SelectTrigger>\n                                  <SelectContent>\n                                    <SelectItem value=\"1\">1</SelectItem>\n                                    <SelectItem value=\"2\">2</SelectItem>\n                                    <SelectItem value=\"3\">3</SelectItem>\n                                    <SelectItem value=\"4\">4</SelectItem>\n                                    <SelectItem value=\"5\">5</SelectItem>\n                                  </SelectContent>\n                                </Select>\n                              </div>\n                            </div>\n                          </div>\n                        </div>\n                      </CardContent>\n                    </Card>\n                  )\n                )}\n              </div>\n\n              <div className=\"col-span-1\">\n                <div className=\"sticky top-4\">\n                  <Card className=\"border-2\">\n                    <CardHeader className=\"p-6\">\n                      <h3 className=\"text-xl font-bold\">Order Summary</h3>\n                    </CardHeader>\n                    <Separator />\n                    <CardContent className=\"p-0\">\n                      <div className=\"space-y-4 p-6\">\n                        <div className=\"flex items-center justify-between\">\n                          <span className=\"text-muted-foreground\">\n                            Subtotal\n                          </span>\n                          <span className=\"font-medium\">$2,090</span>\n                        </div>\n                        <div className=\"flex items-center justify-between\">\n                          <span className=\"text-muted-foreground\">\n                            Shipping Tax\n                          </span>\n                          <span className=\"font-medium text-green-600\">$0</span>\n                        </div>\n                      </div>\n\n                      <Separator />\n\n                      <div className=\"p-6\">\n                        <div className=\"mb-2 flex items-center gap-2\">\n                          <Tag className=\"h-4 w-4 text-muted-foreground\" />\n                          <label className=\"text-sm font-medium\">Promo Code</label>\n                        </div>\n                        <div className=\"flex items-center gap-2\">\n                          <Input\n                            type=\"text\"\n                            placeholder=\"Enter code\"\n                            className=\"flex-1\"\n                          />\n                          <Button variant=\"outline\" className=\"shrink-0\">\n                            Apply\n                          </Button>\n                        </div>\n                      </div>\n\n                      <Separator />\n\n                      <div className=\"space-y-4 bg-muted/30 p-6\">\n                        <div className=\"flex items-center justify-between\">\n                          <span className=\"text-lg font-bold\">Order Total</span>\n                          <span className=\"text-2xl font-bold text-primary\">$2,090</span>\n                        </div>\n                        <Button className=\"w-full gap-2\" size=\"lg\">\n                          <Lock className=\"h-4 w-4\" />\n                          Proceed to Checkout\n                        </Button>\n                      </div>\n\n                      <div className=\"bg-green-50 p-4\">\n                        <div className=\"flex items-start gap-3\">\n                          <div className=\"flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-green-100\">\n                            <Truck className=\"h-4 w-4 text-green-600\" />\n                          </div>\n                          <div>\n                            <p className=\"text-sm font-medium text-green-900\">\n                              Free Shipping Applied\n                            </p>\n                            <p className=\"text-muted-foreground mt-1 text-xs\">\n                              Estimated delivery: 3-5 business days\n                            </p>\n                          </div>\n                        </div>\n                      </div>\n                    </CardContent>\n                  </Card>\n                </div>\n              </div>\n            </div>\n          </CardContent>\n        </Card>\n      </div>\n    </section>\n  )\n}\n",
      "type": "registry:page",
      "target": "app/shopping-cart/page.tsx"
    }
  ],
  "meta": {
    "iframeHeight": "1200px",
    "container": "w-full bg-surface min-h-svh flex px-4 py-12 items-center md:py-20 justify-center min-w-0",
    "mobile": "component"
  },
  "categories": [
    "ecommerce"
  ]
}